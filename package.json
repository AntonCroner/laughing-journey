{
  "name": "@utily/worker-template",
  "version": "0.0.1",
  "description": "TypeScript template for stencil and Cloudflare workers.",
  "private": true,
  "repository": "https://github.com/worker-stencil-template/app/",
  "type": "module",
  "bugs": {
    "url": "https://github.com/worker-stencil-template/app/issues/"
  },
  "homepage": "https://github.com/worker-stencil-template/app/",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "jest": {
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!(cryptly|authly|isoly|gracely|cloudly-http|cloudly-router|cloudly-formdata)/.*)"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json",
        "setTimeout": 2000
      }
    },
    "testEnvironment": "node",
    "testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "node_modules/",
      "dist/"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js,jsx}",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "preset": "ts-jest",
    "testMatch": null
  },
  "scripts": {
    "lint": "eslint '**/*.{ts,tsx}'",
    "fix": "eslint '**/*.{ts,tsx}' --fix",
    "clean": "rimraf dist node_modules coverage",
    "test": "npm run build && node --experimental-vm-modules node_modules/.bin/jest --maxWorkers=2",
    "login": "wrangler login",
    "transpile": "tsc --project tsconfig.test.json",
    "test:watch": "watch jest",
    "build": "npm run build:production",
    "build:production": "(rollup --config rollup.config.js) & (export NODE_ENV='production' && stencil build)",
    "build:preview": "(rollup --config rollup.config.js) & (export NODE_ENV='preview' && stencil build)",
    "build:api": "rollup --config rollup.config.js",
		"build:local": "(rollup --config rollup.dev.config.js) & (export NODE_ENV='local' && stencil build)",
		"build:local:api": "rollup --config rollup.dev.config.js",
    "build:local:ui": "export NODE_ENV='local' && stencil build",
		"start": "npm run start:wrangler",
    "start:wrangler": "(npm run start:wrangler:api) & (npm run start:ui) && kill $!",
    "start:wrangler:api": "wrangler dev --env wrangler",
    "start:local": "(npm run start:local:api) & (npm run start:ui) && kill $!",
    "start:local:api": "(rollup --config rollup.dev.config.js --watch) & (node --experimental-vm-modules --inspect ./node_modules/miniflare/dist/src/cli.js dist/api/index.mjs --wrangler-env miniflare --watch --live-reload -B 'while [ ! -f dist/api/index.mjs ]; do sleep 0.1; done' && kill $!)",
    "start:ui": "export NODE_ENV='local' && stencil build --dev --serve --watch",
		"kill": "(ps -aux | grep rollup | grep watch | awk '{print $2}' | xargs kill $1) & (lsof -i tcp:8787 | grep 8787 | awk '{print $2}' | xargs kill $1) & (lsof -i tcp:3333 | grep 3333 | awk '{print $2}' | xargs kill $1)"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.3.1",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@stencil/core": "^2.14.2",
    "@stencil/router": "^1.0.1",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "5.10.1",
    "@typescript-eslint/parser": "5.10.1",
    "eslint": "^7.32.0",
    "eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20220323",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.4.7",
    "jest-cli": "^27.5.1",
    "miniflare": "^2.5.0",
    "prettierx": "github:utily/prettierx#utily-20220323",
    "puppeteer": "^13.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.66.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-dotenv": "^0.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.1.3",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "authly": "^0.2.9",
    "cloudly-formdata": "^0.0.8",
    "cloudly-http": "^0.0.41",
    "cloudly-router": "^0.0.21",
    "gracely": "^0.1.8",
    "smoothly": "^0.1.105"
  }
}
